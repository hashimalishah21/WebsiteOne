<div id="doc-box">
  <div id="doc-overview">
    <h1><div style="display: inline;" id="document_title" style="width: 100%" data-mercury="simple" data-type="editable"><%= @document.title %></div></h1>
    <div style="font-size: 1.0em; font-style: italic;">
      <div>Project: <strong><%= link_to @project.title, project_path(@project), style: 'font-style: normal;' %></strong></div>
      <div><%= "Created #{time_ago_in_words(@document.created_at)} ago" %> by <%= created_by %></div>
    </div>
  </div>
  <div id="doc-side-panel">
    <% if user_signed_in? %>
      <ul>
        <li><%= custom_css_btn 'edit', 'fa fa-pencil-square-o', mercury_edit_path, id: 'edit_link',
                               data: {save_url: project_document_mercury_update_path(@project, @document)} %></li>

        <% if @document.root? %>
          <li><%= custom_css_btn 'new sub-document', 'fa fa-files-o', new_project_document_path(project_id: @project.friendly_id, parent_id: @document.id), id: 'new_document_link' %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<div class="small-divider"></div>
<div id="document_body" style="width: 100%" data-mercury="full" data-type="editable"><%= clean_html(@document.body) %></div>
<div class="small-divider"></div>
<% if user_signed_in? %>
   <%= link_to 'Save', '' , id: 'save_link', class: 'btn btn-primary', style: 'display:none;' %>
    <%= link_to 'Cancel', '' , id: 'cancel_link', class: 'btn btn-warning', style: 'display:none;' %>
<% end %>
<div class="small-divider"></div>
<div>
  <% unless @children.empty? %>
      <h2>
        <% if @document.root? %>
          Sub-documents (<%= @children.count %>)
        <% end %>
      </h2>
      <ul class="list-group">
        <% @children.each do |child| %>
            <li class="list-group-item">
              <strong><%= link_to child.title, project_document_path(@project, child) %>  </strong>
              <div class="pull-right">Created: <%= child.created_at -%></div>
            </li>
        <% end %>
      </ul>
  <% end %>
  <br />

</div>

<% unless @document.root? %>
  <p>Back to <strong><%= link_to @document.parent.title, project_document_path(@project, @document.parent) %></strong></p>
<% end %>
