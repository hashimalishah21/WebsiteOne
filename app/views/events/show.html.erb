<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="media">
        <a class="pull-left" href="#">
          <img class="media-object" src="<%= cover_for(@event) %>" alt="<%= @event.name %>">
        </a>

        <div class="media-body">
          <h2 class="media-heading"><%= @event.name %></h2>

          <p><%= @event.schedule %></p>
          <strong><%= @event.description %></strong>
        </div>
      </div>
      <% if @event.schedule.present? %>
          <div class="media">
            <div class="well">
              <strong>Upcoming schedule</strong>
              <br/>
              <% @event_schedule.first(5).each do |e| %>
                  <br/>
                  <%= e.strftime("%F at %I:%M%p") %>
              <% end %>
            </div>
          </div>
      <% end %>
      <div class="col-lg-12">
        <% unless @event.url.present? %>
            <%= form_for @event, html: {:class => 'form-vertical', :id => 'event-form'} do |f| %>
                <div class='form-group'>
                  <%= f.label :url, :class => 'control-label' %>
                  <%= f.text_field :url, :class => 'form-control' %>
                  <%= f.submit 'Set', class: 'btn btn-default', data: {disable_with: 'Working...'} %>
                </div>
            <% end %>
        <% else %>
            <%= link_to 'Join Hangout', @event.url, :class => 'btn btn-danger'  %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6">
      <%= link_to 'Back', root_path, :class => 'btn btn-danger' %>
      <%= link_to 'Edit', edit_event_path(@event), :class => 'btn btn-primary' %>
    </div>

  </div>
</div>



