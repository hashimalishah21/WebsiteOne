<section id="devise">
  <div class="col-md-4 col-md-offset-4 form-frame signin">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <fieldset>
          <legend>Sign in</legend>
          <div class='form-group'>
            <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', class: 'form-control' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password, placeholder: 'Enter password', class: 'form-control' %>
          </div>
          <% if devise_mapping.rememberable? -%>
              <div class='form-group'>
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </div>
        </fieldset>
          <% end -%>
          <div class='form-group'>
            <%= f.submit 'Sign in', class: 'btn btn-primary btn-large btn-block' %>
          </div>
          <%= devise_error_simple_message %>
          <%= flash_messages layout_flash: false %>
    <% end %>
    <%= render 'devise/shared/links' %>

  </div>
</section>
