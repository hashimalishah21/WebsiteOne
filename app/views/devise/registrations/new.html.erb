<section id="devise">
  <div class="col-md-4 col-md-offset-4 form-frame signin">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <fieldset>
          <legend>Sign up</legend>
          <div class='form-group'>
            <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', class: 'form-control' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password, placeholder: 'Enter password', class: 'form-control' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password_confirmation, placeholder: 'Repeat password', class: 'form-control' %>
          </div>
          <div class='form-group'>
            <%= f.submit 'Sign up', class: 'btn btn-primary btn-large btn-block' %>
          </div>
          <%= devise_error_simple_message %>
    <% end %>
    <p>
      <small>By registering, you understand that we will store and make use the information provided in accordance with
        our Privacy statement.
      </small>
    </p>
    <%= render 'devise/shared/links' %>
    </fieldset>
  </div>
</section>