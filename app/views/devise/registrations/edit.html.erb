<div class="col-md-4 col-md-offset-4" style="margin-top: -80px;  padding-left: 140px; padding-right: 60px">
<%= devise_error_messages_flash %>
    <h3>Account details</h3>
    <img src="<%= gravatar_for(resource.email) %>" class="img-rounded">


    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        <div><%= f.label :first_name %>
          <div class="form-group">
            <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
          </div>
        </div>

        <div><%= f.label :last_name %>
          <div class="form-group">
            <%= f.text_field :last_name, :autofocus => true, class: 'form-control' %>
          </div>
        </div>

        <div><%= f.label :email %>
          <div class="form-group">
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>

          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>

          <div class="form-group">
            <%= f.password_field :password, :autocomplete => "off", class: 'form-control' %>
          </div>
        </div>

        <div><%= f.label :password_confirmation %>
          <br/>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>


        <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
          <div class="form-group">
          <%= f.password_field :current_password, class: 'form-control' %>
          </div></div>
        </br>
        <div><%= f.submit "Update", class: 'btn btn-primary btn-lg btn-block' %></div>
    <% end %>

    <p>Unhappy? <%= button_to "Cancel my account",  registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger btn-lg btn-block' %></p>

    <%= link_to "Back", :back, :class => 'btn btn-default' %>
  </div>

