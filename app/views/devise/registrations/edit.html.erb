<div class="row" style="margin-top: -80px;">
  <div class="col-md-4 col-md-offset-4">
    <%= devise_error_messages_flash %>
    <h2>Account details</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-1 col-md-offset-4">

    <img src="<%= gravatar_for(resource.email) %>" class="thumbnail img-rounded media-object">
  </div>
  <div class="col-md-3 ">


    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
        <div><%= f.label :first_name %>
          <div class="form-group">
            <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
          </div>
        </div>
        <div><%= f.label :last_name %>
          <div class="form-group">
            <%= f.text_field :last_name, :autofocus => true, class: 'form-control' %>
          </div>
        </div>
        <div><%= f.label :email %>
          <div class="form-group">
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <% if resource.password_required? %>
        <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>

          <div class="form-group">
            <%= f.password_field :password, :autocomplete => "off", class: 'form-control' %>
          </div>
        </div>

        <div><%= f.label :password_confirmation %>
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        <div><%= f.label :current_password %> <p>(we need your current password to confirm your changes)</p>

          <div class="form-group">
            <%= f.password_field :current_password, class: 'form-control' %>
          </div>
        </div>
        <% end %>

        <div><%= f.submit "Update", class: 'btn btn-primary btn-lg btn-block' %></div>
    <% end %>

    <button class="btn btn-social btn-github"><a href="/auth/github"><i class="fa fa-github"></i> | Connect with Github</a></button>

    <p>Unhappy? We would hate to miss you as a friend...
      <%= button_to "Cancel my account", registration_path(resource_name), :data => {:confirm => "Are you sure?"}, :method => :delete, :class => 'btn btn-danger btn-lg btn-block' %></p>

    <%# link_to "Back", :back, :class => 'btn btn-default' %>
  </div>
</div>