<div class="col-md-12 contact">
  <h3 class="footer_header">
    Contact us
  </h3>
  <%= form_tag('', id: 'contact_form', :class => 'form-horizontal') do %>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      <%= label_tag :message %>
      <%= text_area_tag :message %>
      <div class="form-actions">
        <%= submit_tag 'Send message', id: 'send', :class => "btn btn-primary" %>
      </div>
  <% end %>
</div>
