<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h2 class="modal-title" id="myModalLabel">Hire Me Form</h2>
    </div>
    <div class="modal-body">
      <%= form_for '/mail_hire_me_form', :html => {:id => 'hire_me_form', :class => 'form-vertical', :role => 'form'} do |f| %>
          <div class='form-group'>
            <%= f.text_field :name, :id => "f-name", :class => 'form-control', placeholder: 'Name' %>
          </div>
          <div class='form-group'>
            <%= f.text_field :email, :id => "f-email", :class => 'form-control', placeholder: 'Email' %>
          </div>
          <div class='form-group'>
            <%= f.text_area :message, :id => "f-message", :class => 'form-control', placeholder: 'Message', 'rows' => 5 %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit 'Send message', id: 'send', :class => 'btn btn-primary' %>
          </div>
      <% end %>
    </div>
  </div>
</div>

