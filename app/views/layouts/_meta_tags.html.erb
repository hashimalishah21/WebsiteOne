<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="keywords" content="<%= "#{shared_meta_keywords}#{ content_for?(:keywords) ? ",#{yield(:keywords)}" : ''}" %>">
<meta name="description" content="<%= content_for?(:description) ? yield(:description) : default_meta_description %>">
<meta name="author" content="<%= content_for?(:author) ? yield(:author) : 'Agile Venturers' %>">
<% if content_for?(:robots) %>
  <meta name="robots" content="<%= yield(:robots) %>">
<% end %>
<meta name="coverage" content="Worldwide">
<meta name="distribution" content="Global">
<meta name="application-name" content="Agile Ventures Official Website">

<meta property="og:title" content="<%= content_for?(:title) ? yield(:title) : 'Agile Ventures' %>"/>
<meta property="og:type" content="<%= params[:controller] == 'articles' ? 'article' : 'website' %>"/>
<meta name="og:url" content="<%= request.original_url %>"/>
<meta name="og:site_name" content="Agile Ventures"/>
<% if content_for?(:description) %>
  <meta name="og:description" content="<%= yield(:description) %>"/>
<% end %>

<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="<%= content_for?(:title) ? yield(:title) : 'Agile Ventures' %>"/>
<meta name="twitter:url" content="<%= request.original_url %>">
<meta name="twitter:site" content="@AgileVentures">
<% if content_for?(:twitter_creator) %>
  <meta name="twitter:creator" content="<%= yield(:twitter_creator) %>">
<% end %>
<% if content_for?(:description) %>
  <meta name="twitter:description" content="<%= yield(:description) %>"/>
<% end %>
