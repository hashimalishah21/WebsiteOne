<h3>Current Projects</h3>
<ul>
  <% current_projects.each_with_index do |p, index| %>
    <a href="<%= project_path(p) %>"><li>
      <%= p.title %>
      <% has_docs = p.documents.any? %>
      <% if has_docs %>
        <a href="#collapse<%= index %>" class="pull-right project-collapse" data-toggle="collapse">
          <span class="glyphicon glyphicon-chevron-down"></span>
        </a>
      <% end %>
    </li></a>
    <% if has_docs %>
      <ul id="collapse<%= index %>" class="<%= project == p ? 'in' : 'collapse' %>">
        <% p.documents.each do |d| %>
          <a href="<%= project_document_path(p, d) %>"><li><%= d.title %></li></a>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</ul>