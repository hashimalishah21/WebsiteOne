<%= content_for :content do %>
  <div class="container">
    <aside id="articles-sidebar" class="col-sm-3">
      <nav role="complementary">
        <ul id="articles-sidebar-list">
          <a href="<%= articles_path %>"><li class="listing">All Articles</li></a>
          <% standard_tags.each do |tag| %>
            <a href="<%= articles_path(tag: tag) %>"><li class="listing"><%= tag %></li></a>
          <% end %>
        </ul>
      </nav>
    </aside>
    <div id="article-container" class="col-sm-6">
      <%= yield %>
    </div>
  </div>
<% end %>
<%= render template: 'layouts/application' %>
